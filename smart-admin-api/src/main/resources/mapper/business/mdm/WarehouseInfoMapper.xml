<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.lab1024.smartadmin.module.business.mdm.dao.WarehouseInfoDao">

    <resultMap id="WarehouseInfoVO" type="net.lab1024.smartadmin.module.business.mdm.domain.vo.WarehouseInfoVO"></resultMap>
    <resultMap id="WarehouseInfoExcelVO" type="net.lab1024.smartadmin.module.business.mdm.domain.vo.WarehouseInfoExcelVO"></resultMap>


    <select id="queryByPage" resultMap="WarehouseInfoVO">
        select
          wh_code,
          wh_name,
          create_by,
          create_time,
          update_by,
          update_time
        from t_warehouse_info
        <where>
            <if test="queryDTO.whCode != null and queryDTO.whCode != ''">
                AND wh_code = #{queryDTO.whCode}
            </if>
            <if test="queryDTO.whName != null and queryDTO.whName != ''">
                AND INSTR(wh_name,#{queryDTO.whName})
            </if>

            <if test="queryDTO.createTimeBegin != null ">
                AND create_time &gt;= #{queryDTO.createTimeBegin}
            </if>
            <if test="queryDTO.createTimeEnd != null ">
                AND create_time &lt;= #{queryDTO.createTimeEnd}
            </if>

            <if test="queryDTO.updateTimeBegin != null ">
                AND update_time &gt;= #{queryDTO.updateTimeBegin}
            </if>
            <if test="queryDTO.updateTimeEnd != null ">
                AND update_time &lt;= #{queryDTO.updateTimeEnd}
            </if>
        </where>
    </select>

    <select id="queryAllExportData" resultMap="WarehouseInfoExcelVO">
        select
           wh_code,
           wh_name,
           create_by,
           create_time,
           update_by,
           update_time
        from t_warehouse_info
        <where>
            <if test="queryDTO.whCode != null and queryDTO.whCode != ''">
                AND wh_code = #{queryDTO.whCode}
            </if>
            <if test="queryDTO.whName != null and queryDTO.whName != ''">
                AND INSTR(wh_name,#{queryDTO.whName})
            </if>

            <if test="queryDTO.createTimeBegin != null ">
                AND create_time &gt;= #{queryDTO.createTimeBegin}
            </if>
            <if test="queryDTO.createTimeEnd != null ">
                AND create_time &lt;= #{queryDTO.createTimeEnd}
            </if>

            <if test="queryDTO.updateTimeBegin != null ">
                AND update_time &gt;= #{queryDTO.updateTimeBegin}
            </if>
            <if test="queryDTO.updateTimeEnd != null ">
                AND update_time &lt;= #{queryDTO.updateTimeEnd}
            </if>
        </where>
    </select>

    <select id="queryBatchExportData" resultMap="WarehouseInfoExcelVO">
        select
         wh_code,
         wh_name,
         create_by,
         create_time,
         update_by,
         update_time
        from t_warehouse_info
        where wh_code in
        <foreach collection="idList" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </select>

    <delete id="deleteById">
        delete from t_warehouse_info where wh_code = #{id}
    </delete>

    <delete id="deleteByIdList">
        delete from t_warehouse_info where wh_code in
        <foreach collection="idList" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </delete>

    <select id="queryWareHouseList" resultMap="WarehouseInfoVO">
        select distinct wh_code,wh_name from t_warehouse_info
    </select>
</mapper>